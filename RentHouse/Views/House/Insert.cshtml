@{
    ViewData["Title"] = "Home Page";
}

    <div class="container" dir="rtl">

        <form action="/House/Insert" method="post"  enctype="multipart/form-data"  dir="rtl">
            <br />
            <div class="form-group col-md-6" style="margin-right:270px">
                <label for="uname"> مالک </label>
                <select class="form-control" id="Owner" name="Owner">
                    @Html.Raw(ViewBag.Owner)
                </select>
            </div>

            <div class="form-group col-md-6" style="margin-right:270px" >
                <label for="uname">  نام </label>
                <input type="text" class="form-control" id="name" name="name">
            </div>


            <div class="form-group col-md-6" style="margin-right:270px" >
                <label for="uname"dir="rtl"> متراژ </label>
                <input type="text" class="form-control" id="Area" name="Area">
            </div>

            <div class="form-group col-md-6" style="margin-right:270px" >
                <label for="uname">  آدرس</label>
                <input type="text" class="form-control" id="Address" name="Address">
            </div>

            <div class="form-group col-md-6" style="margin-right:270px" >
                <label for="uname"> موقعیت </label>
                <select class="form-control" id="Situation" name="Situation">
                    @Html.Raw(ViewBag.situation)
                </select>
            </div>

            <div class="form-group col-md-6" style="margin-right:270px">
                <button type="submit" class="btn btn-block btn-success " style="color:white">اضافه کردن</button>
            </div>
        </form>
    </div>
